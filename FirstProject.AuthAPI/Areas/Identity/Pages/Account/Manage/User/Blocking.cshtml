            <button>Сохранить</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="../UsersManager">К списку пользователей</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
